<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandText" format="string" />
        <attr name="collapseText" format="string" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="shadow" format="boolean" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MessageView">
        <attr name="mv_showArrow" format="boolean" />
        <attr name="mv_arrowPosition" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
            <enum name="top" value="2" />
            <enum name="bottom" value="3" />
        </attr>
        <attr name="mv_arrowGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>
        <attr name="mv_backgroundColor" format="color" />
        <attr name="mv_backgroundColorPressed" format="color" />
        <attr name="mv_cornerRadius" format="dimension" />
        <attr name="mv_contentPadding" format="dimension" />
        <attr name="mv_arrowMargin" format="dimension" />

    </declare-styleable>
</resources>